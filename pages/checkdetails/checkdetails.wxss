/* pages/checkdetails/checkdetails.wxss */
@import "../footerrules/footerrules.wxss";
page {
  background-color:#F4F5F4;
}
.checkdetails{
  width: 750rpx;
  height: 260rpx;
  background-color: #FFFFFF;
  margin: 12rpx 0rpx;
}
.checkdetails_title{
  width: 100%;
  height: 60rpx;
  margin-left: 24rpx;
  margin-bottom: 32rpx;
  display: flex;
}
.title_img{
  width: 48rpx;
  height: 48rpx;
  margin-top: 20rpx;
}
.money_sum{
  color: #E47036;
  font-size: 44rpx;
  text-align: left;
  margin-top: 14rpx;
  font-weight: 600;
  font-family: PingFangSC-regular;
}
.money_condition{
  color: #BEBEBE;
  font-size: 28rpx;
  margin-left: 12rpx;
  margin-top: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.check_time, .check_phone, .check_packet{
  display: flex;
  margin: 12rpx 48rpx;
}
.time_title, .phone_title, .packet_title{
  color: rgba(190, 190, 190, 100);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.time_sum, .phone_sum, .packet_sum{
  margin-left: 24rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.check_bottom{
  width: 750rpx;
  height: 500rpx;
  margin-top: 12rpx;
  padding-top: 4rpx;
  background-color: #FFFFFF;
}
.check_number{
  width: 702rpx;
  height: 200rpx;
  margin: 24rpx;
  border-radius: 4px;
  color: rgba(190, 190, 190, 100);
  font-size: 28rpx;
  text-align: left;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.4);
  font-family: Arial;
}
.check_input{
  width: 622rpx;
  height: 200rpx;
  line-height: 200rpx;
  margin-left: 80rpx;
  font-size: 96rpx;
  color: black;
  text-align: left;
}
.input_size{
  font-size: 28rpx;
  color:  rgba(190, 190, 190, 100);
}

.use_record_cheapsum, .use_record_paysum{
  display: flex;
  margin: 12rpx 48rpx;
}
.cheapsum_title, .paysum_title{
  color: rgba(190, 190, 190, 100);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.cheapsum_sum{
  margin-left: 24rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.paysum_sum{
  margin-left: 24rpx;
  color: #E47036;
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.check_paysum{
  width: 702rpx;
  height: 92rpx;
  border-radius: 8rpx;
  margin: 48rpx 24rpx 12rpx 24rpx;
  background-color: rgba(242, 171, 11, 100);
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  display: flex;
}
.needpay{
  width: 60%;
  line-height: 92rpx;
  display: flex;
}
.needpay>text{
  margin-left: 66rpx;
}
.needpay_sum{
  color: rgba(255, 255, 255, 100);
  font-size: 44rpx;
  text-align: left;
  margin-left: 18rpx;
  font-family: PingFangSC-semiBold;
}
.pay_hr{
  width: 1rpx;
  height: 52rpx;
  margin-top: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 21);
}
.check_paysum>button{
  outline: none !important;
}
.gotocheck{
  width: 39%;
  line-height: 92rpx;
  background-color: #F2AB0B;
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  outline: none !important;
}
.modal_delect{
  color: #E15518;
}