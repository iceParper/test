/* pages/checkused/checkused.wxss */
/* pages/checkdetails/checkdetails.wxss */
@import "../footerrules/footerrules.wxss";
page {
  background-color:#F4F5F4;
}
.checkdetails{
  width: 750rpx;
  height: 260rpx;
  background-color: #FFFFFF;
  margin: 12rpx 0rpx;
}
.checkdetails_title{
  width: 100%;
  height: 60rpx;
  margin-left: 24rpx;
  margin-bottom: 32rpx;
  display: flex;
}
.title_img{
  width: 48rpx;
  height: 48rpx;
  margin-top: 20rpx;
}
.money_sum{
  color: #BEBEBE;
  font-size: 44rpx;
  text-align: left;
  margin-top: 14rpx;
  font-weight: 600;
  font-family: PingFangSC-regular;
}
.money_condition{
  color: #BEBEBE;
  font-size: 28rpx;
  margin-left: 12rpx;
  margin-top: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.check_time, .check_phone, .check_packet{
  display: flex;
  margin: 12rpx 48rpx;
}
.time_title, .phone_title, .packet_title{
  color: rgba(190, 190, 190, 100);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.time_sum, .phone_sum, .packet_sum{
  margin-left: 24rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.used_go{
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  transform: rotateZ(345deg);
  color: #9D9D9D;
  border-radius: 45rpx;
  font-size: 20rpx;
  font-weight: 600;
  border: 4rpx solid #9D9D9D;
  position: relative;
  top: -210rpx;
  left: 520rpx;
}