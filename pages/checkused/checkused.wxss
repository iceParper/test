/* pages/checkused/checkused.wxss */
/* pages/checkdetails/checkdetails.wxss */
@import "../footerrules/footerrules.wxss";
page {
  background-color:#F4F5F4;
}
.checkdetails{
  width: 750rpx;
  height: 260rpx;
  background-color: #FFFFFF;
  margin: 12rpx 0rpx;
}
.checkdetails_title{
  width: 100%;
  height: 60rpx;
  margin-left: 24rpx;
  margin-bottom: 32rpx;
  display: flex;
}
.title_img{
  width: 48rpx;
  height: 48rpx;
  margin-top: 20rpx;
}
.input_sum {
  border: 1px solid #BEBEBE;
  margin: 24rpx;
  width: 670rpx;
  height: 200rpx;
  border-radius: 10rpx;
  padding-left: 30rpx;
  font-size: 38rpx;
}
.money_sum{
  font-size: 44rpx;
  text-align: left;
  margin-top: 14rpx;
  font-weight: 600;
  font-family: PingFangSC-regular;
}
.orange {
  color: #E47036;

}
.gray {
  color: #BEBEBE;
}
.money_condition{
  color: #BEBEBE;
  font-size: 28rpx;
  margin-left: 12rpx;
  margin-top: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.check_time, .check_phone, .check_packet{
  display: flex;
  margin: 12rpx 48rpx;
}
.time_title, .phone_title, .packet_title{
  color: rgba(190, 190, 190, 100);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.time_sum, .phone_sum, .packet_sum{
  margin-left: 24rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.used_go{
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  transform: rotateZ(345deg);
  color: #E47036;
  border-radius: 45rpx;
  font-size: 20rpx;
  font-weight: 600;
  border: 4rpx solid rgba(228, 112, 54, 73);
  position: relative;
  top: -210rpx;
  left: 520rpx;
}
.check_bottom{
  width: 750rpx;
  margin-top: 12rpx;
  padding-top: 4rpx;
  background-color: #FFFFFF;
}
.use_record_buysum, .use_record_cheapsum, .use_record_paysum, .use_record_time{
  display: flex;
  margin: 24rpx;
  padding-left: 24rpx;
}
.buysum_title, .cheapsum_title, .paysum_title, .time_title{
  color: rgba(190, 190, 190, 100);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.buysum_sum, .cheapsum_sum, .paysum_sum, .time_sum{
  margin-left: 24rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.check_paysum{
  width: 702rpx;
  height: 92rpx;
  border-radius: 8rpx;
  margin: 48rpx 24rpx 12rpx 24rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  display: flex;
}
.check_tobewrittenoff {
  background-color:#F2AB0B;
}
.check_writtenoff {
  background-color: #E47036;
}
.gotocheck{
  width: 100%;
  line-height: 92rpx;
}
.modal_delect{
  color: #E15518;
}