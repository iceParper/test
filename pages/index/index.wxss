/* 小鱼和按钮 */
.cat-footer {
  position: absolute;
  right: 10rpx;
  bottom: 24rpx;
}

.cat-footer .fish {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 10rpx;
  position: relative;
}

.cat-footer .fish .fishbox {
  position: absolute;
  right: 0;
  opacity: 0;
}

.cat-footer .fish .fishbox .fishone {
  position: absolute;
  right: 0;
  top: 0;
}

.cat-footer .fish image {
  width: 60rpx;
  height: 60rpx;
}

.cat-footer .fish .fishNum {
  font-size: 32rpx;
  color: #F2AB0B;
  line-height: 60rpx;
}

.cat-footer .cat-btn .van-button--block {
  width: 544rpx;
  height: 72rpx;
}

/* 活动说明 弹框内容样式  */
.pupop-item {
  font-size: 28rpx;
  color: #101010;
}

.pupop-item .text {
  /* margin-left: 20rpx;/ */
  margin-top: 10rpx;
  text-indent: 2em;
}

.pupop-item .tip {
  margin-top: 30rpx;
  text-indent: 0;
}

/* 绑定手机号 */
.bindingPhone {
  display: flex;
  flex-direction: column;
}

.bindingPhone .shopText {
  width: 500rpx;
  height: 224rpx;
  background: #E0AC5E;
  color: #fff;
  border-radius: 4rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bindingPhone .shopText .doller {
  color: #EE0808;
  font-size: 72rpx;
}

.bindingPhone .shopText .doller>text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.58);
  margin-left: 10rpx;
}

.bindingPhone .phoneCode {
  /* color: #585858; */
  font-size: 28rpx;
}

.bindingPhone .phoneCode .phone-item {
  margin-top: 25rpx;
}

.bindingPhone .phoneCode .phone-item .phonetext {
  color: rgba(88, 88, 88, .52);
  margin: 0 16rpx;
}

.bindingPhone .phoneCode .phone-item .input>input {
  border: 1rpx solid rgba(138, 138, 138, .3);
  padding: 10rpx 15rpx;
  border-radius: 8rpx;
  margin: 0 16rpx;
  margin-top: 8rpx;
}

.bindingPhone .phoneCode .phone-item .code-input {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bindingPhone .phoneCode .phone-item .code-input .tipText>button {
  color: rgb(242, 171, 11);
  font-size: 28rpx;
  font-weight: bold;
  width: 172rpx;
  height: 68.8rpx;
  text-align: center;
  line-height: 68.8rpx;
  background: #fff;
  padding: 0;
}

.bindingPhone .phoneCode .phone-item .code-input .tipText>button::after {
  border: none;
}

