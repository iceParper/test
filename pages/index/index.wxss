/* 背景图片 */
.page-bg {
  position: fixed;
  top: 0%;
  right: 0%;
  bottom: 0%;
  left: 0%;
  z-index: -10;
}

.page-bg .page-image {
  width: 100%;
  height: 100%;
}


/* 转盘 */
.roulette {
  /* width: 50%;*/
  height: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.roulette-outer {
  width: 680rpx;
  height: 680rpx;
  margin-top: 24rpx;
  background: rgba(138, 138, 138, .3);
  position: relative;
}

.roulette-outer>image {
  width: 100%;
  height: 100%;
}

/* 转盘指针样式 */
.roulette-outer .round-pointer {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  /* transform: translate(-50%, -50%); */
  z-index: 10;
}

.roulette-outer .round-pointer>image {
  width: 100%;
  height: 100%;
}

/* 活动说明 */
.roulette-outer .text {
  display: flex;
  align-items: center;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  color: rgba(255, 255, 255, 0.507);
  font-size: 24rpx;
  padding: 15rpx 0 0 15rpx;
  z-index: 20;
}

.roulette-outer .text>span {
  margin-left: 8rpx;
}

.roulette-outer .text>.image {
  width: 26rpx;
  /* height: 28rpx; */
  display: flex;
  align-items: center;
}

.roulette-outer .text>.image>image {
  margin-top: 2rpx;
  width: 100%;
}

/* 获奖信息样式 */
.winawardinfo {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.win-content {
  width: 680rpx;
  height: 224rpx;
  background-color: #e0ac5ecc;
  margin-top: 34rpx;
  overflow: hidden;
  padding: 0rpx 24rpx;
  box-sizing: border-box;
  position: relative;
  border-radius: 10rpx;
}

.win-content swiper {
  height: 224rpx;
}
.win-content swiper swiper-item{
  height: 55rpx;
}
.win-content .win-item {
  height: 55rpx;
  line-height: 55rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* animation: anis 20s linear infinite; */
}

/* 文本滚动样式 */
@keyframes anis {
  100% {
    transform: translateY(-400rpx)
  }
}

.win-item .image {
  width: 32rpx;
  height: 32rpx;
  margin-top: 5rpx;
}

.win-item .image>image {
  width: 100%;
  height: 100%;
}

.win-item .phone {
  width: 150rpx;
  text-align: center;
}

.win-item .phone-text {
  letter-spacing: 4rpx;
}

.win-item .date-time {
  width: 110rpx;
  color: rgba(255, 255, 255, 0.507);
}

.win-item .chouzhong {
  width: 54rpx;
  color: rgba(255, 255, 255, 0.507);
}

.win-item .tip-text {
  width: 73rpx;
  /* color: rgba(255, 255, 255, 0.507); */
  color: #fff;
}

.win-item .tip-title {
  width: 168rpx;
  font-weight: bold;
}

