/* 头部 */
.header {
  width: 100%;
  height: 106rpx;
  border-radius: 10rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header .title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #8A8A8A;
}

.header .hr {
  width: 504rpx;
  height: 2rpx;
  background-color: #BBBBBB;
  margin-top: 18rpx;
  /* margin-bottom: 40rpx; */
}

.header .close {
  position: absolute;
  right: 0;
  top: 0;
  padding: 0 0 15rpx 15rpx;
}

.header .close>image {
  width: 38rpx;
  height: 38rpx;
  padding-right: 8rpx;
  padding-top: 8rpx;
}

.section {
  padding: 0 50rpx;
  box-sizing: border-box;
  /* width: 496rpx; */
  height: 500rpx;
}

/* 尾部 */
.footer {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 36rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
}

.footer .btn {
  width: 504rpx;
  font-weight: bold;
}

.footer .btn .van-button {
  border-radius: 15rpx;
}