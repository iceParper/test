.pupop-container { 
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 999;
}

.container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 35%;
}

.pupop-content {
  width: 596rpx;
  height: 768rpx;
  background: #fff;
  position: relative;
  box-shadow: 0 8rpx 5rpx #bcbcbc;
  border-radius: 10rpx;
  /* animation: skin 2s; */
}

